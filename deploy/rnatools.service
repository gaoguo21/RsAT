[Unit]
Description=RNA-seq Analysis Flask App
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/RsAT
Environment="PATH=/home/ubuntu/RsAT/venv/bin"
ExecStart=/home/ubuntu/RsAT/venv/bin/gunicorn -w 2 -b 127.0.0.1:8000 app:app
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
